<Application x:Class="RedgifsDownloader.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RedgifsDownloader"
             xmlns:views="clr-namespace:RedgifsDownloader.View"
             xmlns:vm="clr-namespace:RedgifsDownloader.ViewModel"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:DownloadsViewModel}">
            <views:DownloadsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Application.Resources>
</Application>
