<Window x:Class="RedgifsDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RedgifsDownloader"
        xmlns:conv="clr-namespace:RedgifsDownloader.Converter"
        mc:Ignorable="d"
        Title="Redgifs Downloader v1.0.1" 
        Height="450"
        MinHeight="450"
        Width="330"
        MinWidth="330" 
        Closing="Window_Closing">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="文件" Command="{Binding NavigateCommand}">
                <MenuItem Header="RedGifs" Command="{Binding NavigateCommand}" CommandParameter="Redgifs"/>
                <MenuItem Header="Reddit" Command="{Binding NavigateCommand}" CommandParameter="Reddit"/>
                <MenuItem Header="设置" Command="{Binding NavigateCommand}" CommandParameter="Settings"/>
            </MenuItem>
        </Menu>
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
    </Grid>
</Window>
