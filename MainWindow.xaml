<Window x:Class="RedgifsDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RedgifsDownloader"
        mc:Ignorable="d"
        Title="Redgifs Downloader v1.0.1" 
        Height="450"
        MinHeight="450"
        Width="330"
        MinWidth="330" 
        Closing="Window_Closing">    
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition MaxWidth="120" MinWidth="80"/>                
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" 
                       Text="User:"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Column="1"  
                     x:Name="UserBox"                                         
                     Margin="5,0,0,0"/>
            <TextBlock Grid.Column="2" 
                       Text="Max Download:"
                       VerticalAlignment="Center"
                       Margin="5,0,0,0"/>
            <ComboBox Grid.Column="3"
                      x:Name="maxDownloadComboBox"
                      IsEditable="True"
                      Margin="5,0,0,0">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="6"/>
                <ComboBoxItem Content="7"/>
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="9"/>
                <ComboBoxItem Content="10"/>
            </ComboBox>
            <Button Grid.Column="4" 
                    x:Name="BtnCrawl"                    
                    Content="Crawl"                    
                    MinWidth="55"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Right"                    
                    Click="BtnCrawl_Click"/>
        </Grid>
        <ListView x:Name="ListViewResults"
                  Grid.Row="1"
                  MinHeight="120"
                  Margin="0,0,0,5"
                  HorizontalAlignment="Stretch"
                  MouseDoubleClick="ListViewResults_MouseDoubleClick">                      
            <ListView.View>                
                <GridView>
                    <GridViewColumn Header="Title" 
                                    DisplayMemberBinding="{Binding id}" 
                                    Width="230"/>
                    <GridViewColumn Header="状态" 
                                    DisplayMemberBinding="{Binding status}" 
                                    Width="60"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        <Grid Grid.Row="2"
              Height="20"
              Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="结果:"/>
            <TextBlock Grid.Column="1" Text="{Binding VideosCount}"/>            
            <Button x:Name="BtnDownload"
                    Grid.Column="2" 
                    Content="下载"
                    Width="70"
                    HorizontalAlignment="Right"
                    Click="BtnDownload_Click"/>
            <Button x:Name="BtnStop"
                    Grid.Column="3" 
                    Content="停止"
                    Width="35"
                    HorizontalAlignment="Right"
                    Margin="5,0,0,0"
                    Click="BtnStop_Click"/>
        </Grid>
        <Grid Grid.Row="3"
              Height="20"
              Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="失败:"/>
            <TextBlock Grid.Column="1" x:Name="TxtFailedCount"/>
            <TextBlock Grid.Column="2" Text="已下载:"/>
            <TextBlock Grid.Column="3" x:Name="TxtDownloadedCount"/>
            <Button x:Name="BtnRetryAll"
                    Grid.Column="4" 
                    Content="全部重试"
                    Width="70"
                    HorizontalAlignment="Right"
                    Click="BtnRetryAll_Click"/>
        </Grid>
        <ListView x:Name="ListViewFailed"
                  Grid.Row="4"
                  MinHeight="100"
                  MouseDoubleClick="ListViewFailed_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title" 
                                    Width="230"
                                    DisplayMemberBinding="{Binding id}"/>
                    <GridViewColumn Header="状态"                                      
                                    Width="60"
                                    DisplayMemberBinding="{Binding status}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
