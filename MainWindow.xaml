<Window
    x:Class="RedgifsDownloader.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:RedgifsDownloader.Presentation.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RedgifsDownloader"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Redgifs Downloader v1.0.1"
    Width="330"
    Height="450"
    MinWidth="330"
    MinHeight="450"
    Closing="Window_Closing"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Command="{Binding NavigateCommand}" Header="文件">
                <MenuItem
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Redgifs"
                    Header="RedGifs">
                    <MenuItem.Icon>
                        <Image Source="/Resources/redgifs.ico" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Reddit"
                    Header="Reddit">
                    <MenuItem.Icon>
                        <Image Source="/Resources/reddit.ico" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Command="{Binding NavigateCommand}"
                    CommandParameter="ImageSim"
                    Header="ImageSim">
                    <MenuItem.Icon>
                        <Image Source="/Resources/image-sim.ico" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Cleaner"
                    Header="Dupe Cleaner">
                    <MenuItem.Icon>
                        <Image Source="/Resources/dupe-clean.ico" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem
                Command="{Binding NavigateCommand}"
                CommandParameter="Settings"
                Header="设置" />
            <MenuItem Header="关于" />
        </Menu>
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}" />
    </Grid>
</Window>
