<UserControl
    x:Class="RedgifsDownloader.View.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RedgifsDownloader.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <GroupBox
            Grid.Row="0"
            Margin="5"
            VerticalAlignment="Top"
            Header="下载">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Margin="0,15,0,0"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Text="Max. Downloads:" />
                    <ComboBox
                        MinWidth="50"
                        MaxWidth="100"
                        Margin="5,0,0,0"
                        IsEditable="True"
                        ItemsSource="{Binding MaxConcurrencyOptions}"
                        Text="{Binding MaxConcurrency, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <Grid Grid.Row="1" Margin="0,15,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition MaxWidth="70" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Margin="5,0,0,0"
                        Text="下载路径:" />
                    <TextBox
                        Grid.Column="1"
                        MaxHeight="30"
                        Margin="5,0,0,0"
                        Text="{Binding DownloadDirectory}" />
                    <Button
                        Grid.Column="2"
                        MaxHeight="30"
                        Margin="5,0,0,0"
                        Command="{Binding ChooseDownloadFolderCommand}"
                        Content="选择" />
                </Grid>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="1" />
    </Grid>
</UserControl>
